@page "/editallergen/{Id}"
@using MedHub.UI.Pages.Models;
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
<h2>Edit Allergen</h2>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="Name"> Allergen Name *</label>
            <input form="Name" class="form-control" @bind="@allergen.Name" />
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" class="btn btn-primary" @onclick="@Save" value="Save" />
            <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />
        </div>
    </div>
</div>
@code {
    [Parameter]
    public string Id { get; set; }
    AllergenViewModel allergen = new AllergenViewModel();
    protected override async Task OnInitializedAsync()
    {
        allergen = await Http.GetFromJsonAsync<AllergenViewModel>("https://localhost:7260/api/v1/Allergens/" + Id);
    }
    protected async Task Save()
    {
        var response = await Http.PutAsJsonAsync("https://localhost:7260/api/v1/Allergens/" + Id, @allergen);

        if (response.IsSuccessStatusCode)
        {
            await JsRuntime.InvokeVoidAsync("alert", "Updated Successfully!");
            NavigationManager.NavigateTo("allergenlist");
        }
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("allergenlist");
    }
}